  let (p‚ÇÅ , a‚ÇÅ , p‚ÇÇ , a‚ÇÇ , q , eq , eq‚ÇÅ , eq‚ÇÇ) = strip-ite-r seq
      le12345 = ite-‚â§‚Å±-elim {q‚ÇÅ = Œª z ‚Üí el! ((z ‚àà post a‚ÇÅ) ‚äé‚ÇÅ (z ‚àà post a‚ÇÇ))}
