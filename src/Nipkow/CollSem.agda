  let (p , eq) = strip-skip-r seq
      le = skip-‚â§‚Å±-elim {s = Œª z ‚Üí el! ‚åû z ‚àà ss ‚åü} {s' = Œª z ‚Üí el! ‚åû z ‚àà strip-skip-r seq .fst ‚åü} $
           subst (Œª q ‚Üí step ss q ‚â§‚Å± q) eq stleq
